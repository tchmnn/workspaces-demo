{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "patch-todo-schema",
  "title": "Todo Patch",
  "description": "Payload for a patch request to a todo resource",
  "type": "object",
  "required": [],
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the todo"
    },
    "title": {
      "type": "string",
      "description": "The title of the todo"
    },
    "content": {
      "type": "string",
      "description": "The content of the todo"
    },
    "done": {
      "type": "boolean",
      "description": "The state of the todo"
    }
  }
}