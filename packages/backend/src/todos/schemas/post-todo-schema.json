{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "post-todo-schema",
  "title": "Add a Todo",
  "description": "Payload to create a todo",
  "type": "object",
  "required": ["title", "content"],
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the todo"
    },
    "content": {
      "type": "string",
      "description": "The content of the todo"
    }
  }
}